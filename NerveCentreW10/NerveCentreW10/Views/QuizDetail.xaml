<Page
    x:Class="NerveCentreW10.Views.QuizDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="using:NerveCentreW10.ViewModels"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:NerveCentreW10.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter
            x:Key="BoolToVisibilityConverter"
            FalseValue="Collapsed"
            TrueValue="Visible" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="48" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.RowSpan="2">
            <StackPanel Grid.Column="0">
                <TextBlock
                    x:Name="Title"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TitleTextBlockStyle}" />
                <Border Style="{StaticResource BorderLine1}" />
                <controls:ImageEx x:Name="MyImage" Grid.Column="1" />
                <ListView
                    x:Name="MyListView"
                    Margin="0,0,0,64"
                    SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="data:QuizClass">
                            <StackPanel Style="{StaticResource StackPanelForQuestions}">
                                <TextBlock
                                    x:Name="QQ"
                                    Foreground="{Binding QColor}"
                                    Style="{StaticResource QuestionTextStyle}"
                                    Text="{Binding QTEXT}" />
                                <RadioButton
                                    x:Name="QA"
                                    Content="{Binding QA}"
                                    IsChecked="{Binding QAIsActive, Mode=TwoWay}" />
                                <RadioButton
                                    x:Name="QB"
                                    Content="{Binding QB}"
                                    IsChecked="{Binding QBIsActive, Mode=TwoWay}" />
                                <RadioButton
                                    x:Name="QC"
                                    Content="{Binding QC}"
                                    IsChecked="{Binding QCIsActive, Mode=TwoWay}" />
                                <RadioButton
                                    x:Name="QD"
                                    Content="{Binding QD}"
                                    IsChecked="{Binding QDIsActive, Mode=TwoWay}" />
                                <TextBlock
                                    x:Name="ANS"
                                    Style="{StaticResource TextBlockForCorrect}"
                                    Text="{Binding ANS}"
                                    Visibility="{Binding IsChecked, ElementName=RevealHideAnswersButton, Converter={StaticResource BoolToVisibilityConverter}}" />
                                <TextBlock
                                    x:Name="REA"
                                    Style="{StaticResource TextBlockForCorrect}"
                                    Text="{x:Bind REA}"
                                    TextWrapping="Wrap"
                                    Visibility="{Binding IsChecked, ElementName=RevealHideAnswersButton, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

        </ScrollViewer>

        <Grid
            Grid.Row="1"
            Height="48"
            Background="{ThemeResource DetailPageCommandbarAcrylic1}">
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button
                    x:Name="SubmitButton"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Click="SubmitButton_Click"
                    Content="Submit"
                    Style="{StaticResource ButtonRevealStyle}" />
                <ToggleButton
                    x:Name="RevealHideAnswersButton"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Checked="RevealHideAnswersButton_Checked"
                    Content="Show Answers"
                    Style="{StaticResource ToggleButtonRevealStyle}"
                    Unchecked="RevealHideAnswersButton_Unchecked" />
                <Button
                    x:Name="ViewScoresButton"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Click="ViewScoresButton_Click"
                    Content="View Scores"
                    Style="{StaticResource ButtonRevealStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
