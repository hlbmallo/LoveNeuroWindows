<Page
    x:Class="NerveCentreW10.Views.Section8MoreResources"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NerveCentreW10.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>

        <GridView x:Name="GridView1" Grid.Row="0" Style="{StaticResource GridViewStyle1}" ItemTemplate="{StaticResource MoreResources1DataTemplate}" ItemClick="GridView1_ItemClick" ItemContainerStyle="{StaticResource GridViewItemStyle1}"/>

        <GridView x:Name="GridView2" Grid.Row="1" Style="{StaticResource GridViewStyle1}" ItemTemplate="{StaticResource MoreResources2DataTemplate}" ItemClick="GridView2_ItemClick" ItemsSource="{x:Bind ViewModel.MoreResourcesList}" ItemContainerStyle="{StaticResource GridViewItemStyle1}"/>

    </StackPanel>
    
</Page>
