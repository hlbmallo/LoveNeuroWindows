<Page
    x:Class="NerveCentreW10.Views.ViewScores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:NerveCentreW10.Models"
    xmlns:local="using:NerveCentreW10.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Your Scores for Quiz ABC:" />

        <ListView
            x:Name="MyGridView"
            Grid.Row="1"
            SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:QuizScore">
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelForQuestions}">
                        <TextBlock Margin="10" Text="{x:Bind QuizName}" />
                        <TextBlock Margin="10" Text="{x:Bind MyScore}" />
                        <TextBlock Margin="10" Text="{x:Bind MyDateForThatScore}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
