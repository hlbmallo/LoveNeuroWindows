    <helpers:CloudClasssVisibilityConverter x:Key="cloudHelper" />

    <DataTemplate x:Key="NotesDataTemplate" x:DataType="data:NotesClass">
        <Grid
            x:Name="MyGrid"
            Width="270"
            Height="270"
            Padding="10"
            PointerCanceled="MyGrid_PointerCanceled"
            PointerCaptureLost="MyGrid_PointerCaptureLost"
            PointerEntered="MyGrid_PointerEntered"
            PointerExited="MyGrid_PointerExited"
            PointerPressed="MyGrid_PointerPressed"
            PointerReleased="MyGrid_PointerReleased">
            <controls:DropShadowPanel
                x:Name="MyDropShadow"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                BlurRadius="20"
                OffsetX="0"
                OffsetY="0"
                Opacity="0"
                ShadowOpacity=".4"
                Color="Black">
                <Grid />
            </controls:DropShadowPanel>
            <Grid
                x:Name="MyGrid2"
                Margin="10"
                ui:VisualExtensions.NormalizedCenterPoint="0.5"
                Background="White"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.4*" />
                </Grid.RowDefinitions>

                <controls:ImageEx
                    x:Name="MyImage"
                    Grid.Row="0"
                    MaxHeight="80"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    CacheMode="BitmapCache"
                    IsCacheEnabled="True"
                    Source="{x:Bind NotesImage}"
                    Stretch="Uniform" />
                <Border
                    x:Name="MyBorder2"
                    Grid.Row="1"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent">
                    <TextBlock
                        x:Name="MyTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#2b2b2b"
                        Text="{x:Bind NotesTitle}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Border>
            </Grid>
        </Grid>
    </DataTemplate>

