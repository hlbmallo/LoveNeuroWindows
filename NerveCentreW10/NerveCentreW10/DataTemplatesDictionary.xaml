    <helpers:CloudClasssVisibilityConverter x:Key="cloudHelper" />
    <media:AttachedCardShadow
        x:Name="CustomShadow1"
        BlurRadius="60"
        CornerRadius="20"
        Offset="4"
        Color="Turquoise" />


    <DataTemplate x:Key="NotesDataTemplate" x:DataType="data:NotesClass">

        <Border
            x:Name="MyGrid"
            Width="350"
            Height="250"
            CornerRadius="10"
            PointerCanceled="MyGrid_PointerCanceled"
            PointerCaptureLost="MyGrid_PointerCaptureLost"
            PointerEntered="MyGrid_PointerEntered"
            PointerExited="MyGrid_PointerExited"
            PointerPressed="MyGrid_PointerPressed"
            PointerReleased="MyGrid_PointerReleased">

            <Grid
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.7*" />
                    <RowDefinition Height="0.3*" />
                </Grid.RowDefinitions>

                <controls:ImageEx
                    x:Name="MyImage"
                    Grid.Row="0"
                    MaxHeight="110"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    CacheMode="BitmapCache"
                    IsCacheEnabled="True"
                    Source="{x:Bind NotesImage}"
                    Stretch="Uniform" />
                <Border
                    x:Name="MyBorder2"
                    Grid.Row="1"
                    Margin="5"
                    Padding="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Turquoise"
                    CornerRadius="10">
                    <TextBlock
                        x:Name="MyTextBlock"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="17"
                        FontWeight="Normal"
                        Foreground="White"
                        Text="{x:Bind NotesTitle}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                </Border>

            </Grid>
            <ui:Effects.Shadow>
                <ui:AttachedDropShadow
                    BlurRadius="100"
                    CornerRadius="10"
                    Opacity="0.5"
                    Offset="0,0" />
            </ui:Effects.Shadow>
        </Border>
    </DataTemplate>

















